                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>

                            <!-- Player 5 -->
                            <TextBlock x:Name="player5Rank" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="0" Grid.Row="5" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player5Name" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="1" Grid.Row="5" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player5CorrectAnswers" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="2" Grid.Row="5" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player5TimePerAnswer" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="3" Grid.Row="5" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>

                            <!-- Player 6 -->
                            <TextBlock x:Name="player6Rank" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="0" Grid.Row="6" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player6Name" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="1" Grid.Row="6" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player6CorrectAnswers" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="2" Grid.Row="6" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player6TimePerAnswer" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="3" Grid.Row="6" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>

                            <!-- Player 7 -->
                            <TextBlock x:Name="player7Rank" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="0" Grid.Row="7" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player7Name" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="1" Grid.Row="7" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player7CorrectAnswers" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="2" Grid.Row="7" Margin="5">
                                <TextBlock.Background>
