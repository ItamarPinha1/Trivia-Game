                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player3CorrectAnswers" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="2" Grid.Row="3" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player3TimePerAnswer" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="3" Grid.Row="3" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>

                            <!-- Player 4 -->
                            <TextBlock x:Name="player4Rank" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="0" Grid.Row="4" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player4Name" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="1" Grid.Row="4" Margin="5">
