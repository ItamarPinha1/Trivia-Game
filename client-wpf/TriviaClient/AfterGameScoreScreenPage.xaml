                            </TextBlock>
                            <TextBlock x:Name="player7TimePerAnswer" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="3" Grid.Row="7" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>

                            <!-- Player 8 -->
                            <TextBlock x:Name="player8Rank" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="0" Grid.Row="8" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player8Name" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="1" Grid.Row="8" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player8CorrectAnswers" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="2" Grid.Row="8" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBlock x:Name="player8TimePerAnswer" FontSize="30" TextAlignment="Center" FontFamily="Impact" Height="70" Grid.Column="3" Grid.Row="8" Margin="5">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#FF84A0B0" Opacity="0.3"/>
                                </TextBlock.Background>
                            </TextBlock>
                        </Grid>

                        <Button Content="Leave Game" Margin="20,0,20,30" VerticalAlignment="Bottom" Click="Button_Click" Padding="15" FontWeight="Bold" Style="{DynamicResource RoundButton}" Background="#FF00243A" Foreground="White" FontSize="40" Width="700" Height="80"/>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Viewbox>
</Page>

